<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools" android:id="@+id/nav_graph"
            app:startDestination="@id/mapFragment">

    <fragment android:id="@+id/displayListingFragment" android:name="com.example.cribb.DisplayListingFragment"
              android:label="fragment_display_listing" tools:layout="@layout/fragment_display_listing">
        <argument android:name="dynamicAddress" app:argType="string" android:defaultValue="address"/>
        <action android:id="@+id/action_displayListingFragment_to_mapFragment" app:destination="@id/mapFragment"
                app:exitAnim="@anim/nav_default_exit_anim" app:popUpTo="@id/displayListingFragment"
                app:popUpToInclusive="true"/>
    </fragment>
    <fragment android:id="@+id/mapFragment" android:name="com.example.cribb.MapFragment" android:label="fragment_map"
              tools:layout="@layout/fragment_map">
        <action android:id="@+id/action_mapFragment_to_displayListingFragment"
                app:destination="@id/displayListingFragment"/>
        <action android:id="@+id/action_createListing" app:destination="@id/createListingFragment"/>
        <action android:id="@+id/action_mapFragment_to_profileFragment" app:destination="@id/profileFragment"/>
    </fragment>
    <fragment android:id="@+id/createListingFragment" android:name="com.example.cribb.CreateListingFragment"
              android:label="fragment_create_listing" tools:layout="@layout/fragment_create_listing"/>
    <fragment android:id="@+id/profileFragment" android:name="com.example.cribb.ProfileFragment"
              android:label="fragment_profile" tools:layout="@layout/fragment_profile"/>
</navigation>