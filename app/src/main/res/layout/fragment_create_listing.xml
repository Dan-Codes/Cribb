<?xml version="1.0" encoding="utf-8"?>

<ScrollView
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".CreateListingFragment"
        android:background="@color/cribbDarkGrey"
        android:layout_height="match_parent" >
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cribbDarkGrey"
            android:id="@+id/LinearLayout_in_scroll" android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <androidx.constraintlayout.widget.Guideline
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:layout_constraintGuide_begin="48dp"
                    android:id="@+id/guide_left"/>
            <androidx.constraintlayout.widget.Guideline
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/guide_right" app:layout_constraintGuide_end="48dp"/>
            <androidx.constraintlayout.widget.Guideline
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:layout_constraintGuide_percent="0.6"
                    android:id="@+id/guide_60"/>
            <ImageView
                    android:src="@drawable/ic_home"
                    android:layout_width="118dp"
                    android:layout_height="115dp" android:id="@+id/imageView2"
                    app:layout_constraintEnd_toStartOf="@+id/guide_right"
                    app:layout_constraintStart_toStartOf="@+id/guide_left"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="24dp"/>

            <!--<fragment android:id="@+id/autocomplete_fragment"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="41dp"-->
            <!--android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"-->
            <!--app:layout_constraintEnd_toStartOf="@+id/guide_right"-->
            <!--app:layout_constraintStart_toStartOf="@+id/guide_left"-->
            <!--app:layout_constraintHorizontal_bias="1.0"-->
            <!--tools:layout_editor_absoluteY="691dp"/>-->
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/guide_left"
                    app:layout_constraintEnd_toEndOf="@id/guide_right" app:layout_constraintHorizontal_bias="0.0"
                    android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/imageView2"
                    android:id="@+id/textInputLayout">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/address" android:inputType="textPostalAddress"
                        android:id="@+id/address1"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@+id/guide_left"
                    app:layout_constraintEnd_toStartOf="@+id/guide_right"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/textInputLayout" android:id="@+id/textInputLayout2">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="address 2" android:id="@+id/address2"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@+id/guide_left"
                    app:layout_constraintTop_toBottomOf="@id/textInputLayout2"
                    android:layout_marginTop="16dp"
                    android:id="@+id/textInputLayout4" app:layout_constraintEnd_toStartOf="@+id/guide_right"
            >

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="City" android:id="@+id/city"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toStartOf="@+id/guide_right"
                    app:layout_constraintStart_toStartOf="@+id/guide_left"
                    android:id="@+id/textInputLayout5" app:layout_constraintTop_toBottomOf="@+id/textInputLayout3"
                    android:layout_marginTop="16dp">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Landlord/Leasing Company" android:id="@+id/landlord"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toStartOf="@+id/guide_right"
                    app:layout_constraintStart_toStartOf="@+id/guide_left"
                    android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textInputLayout5"
                    android:id="@+id/textInputLayout6">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Cost of Rent" android:id="@+id/rent"/>
            </com.google.android.material.textfield.TextInputLayout>
            <Button
                    android:text="Submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/submit"
                    android:textColorHint="@color/cribbRed"
                    tools:layout_editor_absoluteY="631dp" android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp" android:gravity="bottom|center" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                    app:layout_constraintHorizontal_bias="0.517"/>
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toStartOf="@id/guide_60"
                    app:layout_constraintStart_toStartOf="@+id/guide_left"
                    android:id="@+id/textInputLayout3" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/textInputLayout4" android:layout_marginRight="16dp"
                    android:layout_marginEnd="16dp">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="State" android:id="@+id/state" android:autoText="true"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toStartOf="@id/guide_right" android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/textInputLayout4"
                    app:layout_constraintStart_toStartOf="@+id/guide_60" android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Zipcode" android:id="@+id/zipcode"/>
            </com.google.android.material.textfield.TextInputLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</ScrollView>